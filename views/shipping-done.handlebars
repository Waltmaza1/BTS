<script src="https://code.jquery.com/jquery.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<div class="container">
	<div class="jumbotron" style="text-align: center;">
		<h1>Orders ready for shipping</h1>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-heading" style="text-align: center;">
					<div class="panel-body">
						<div class="panel-body">
						<table class="table">
						<tr>
							<th style="text-align: center;">Product Name</th>
							<th style="text-align: center;">Order Number</th>
							<th style="text-align: center;">Station Completed</th>
							
						</tr>
						{{#each data}}
						<tr>
							<td>{{this.product_name}}</td>
							<td>{{this.orders_id}}</td>
							<td>{{this.station_name}}</td>
							
							<td>
								<form action="/insert-shipping/{{this.orders_id}}?_method=PUT" method="POST">
								
								<button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Ship</button>
								</form>
							</td>
						</tr>
							
						{{/each}}
					</table>
						<a href="/allOrders">BACK to OPEN ORDERS</a>

						</div>
					</div>
				</div>
			</div>
		</div>
